<% provide(:title, "Atlit") %>
<h2>Daftar Atlit</h2>
<table class="table table-hover">
  <thead>
  <tr class="active">
  <th>
  		No
  	</th>
  	<th>
  		Nama
  	</th>
  	<th>
  		Kota
  	</th>
  	<th>
  		Edit
  	</th>
  </tr>
  	
  </thead>
  <tbody>
  
  	<% if @athletes.present? %>

	<% @athletes.each_with_index do |a, index| %>
	<tr>
	<td class="athletes no-<%= a.id %>"><%= @athletes.offset + index + 1 %></td>
	<td class="name"><%= a.name %></td>
	<td class="city"></td>
	<td class="edit"></td>
	</tr>
	<% end %>
	
	
	
<% else %>
	<p> There are no arctiles containing the terms <strong><%= params[:search] %></strong></p>
<% end %>
  </tbody>
</table>
<%= will_paginate @articles %>