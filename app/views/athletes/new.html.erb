<% provide(:title, "Add New Athlete") %>
<h2>Create New Athlete</h2>
<%= form_for(@athlete, :html => {:class => "form-horizontal"}) do |f| %>

	<div class="form-group">
		<%= f.label :name, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :gender, class: "col-sm-2 control-label" %>
		<div class="col-sm-2">
			<select name="athlete[gender]" class="form-control">
				<option value="Male">Male</option>
				<option value="Female">Female</option>
			</select>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :birtday, class: "col-sm-2 control-label" %>
		<div class="col-sm-2">
			<SELECT id="date" class="form-control" name="dd"></SELECT>
		</div>
		<div class="col-sm-3">
			<SELECT id="month" class="form-control" name="mm"></SELECT>
		</div>
		<div class="col-sm-2">
			<SELECT id="year" class="form-control" name="yyyy"></SELECT>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :address, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_area :address, class: "form-control", placeholder: "Address" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :city, class: "col-sm-2 control-label" %>
		<div class="col-sm-3">
			<%= f.text_field :city, class: "form-control", placeholder: "City" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :province, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :province, class: "form-control", placeholder: "Province" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :team, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= select("athlete", "team_id", Team.all.collect {|p| [ p.name, p.id ] }, {prompt: 'Select Team'}, class: "form-control") %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :email, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :email, class: "form-control", placeholder: "Email Address" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :phone, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :number, class: "col-sm-2 control-label" %>
		<div class="col-sm-1">
			<%= f.text_field :number, class: "form-control", placeholder: "Athlete Number" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :image, class: "col-sm-2 control-label" %>
		<div class="col-sm-5">
			<%= f.file_field :image, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-8">
		  <%= f.submit "Submit", class: "btn btn-default" %>
		</div>
	</div>
<% end %>