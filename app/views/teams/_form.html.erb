<%= form_for(@team, :html => {:class => "form-horizontal"}) do |f| %>

	<div class="form-group">
		<%= f.label :name, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_field :name, class: "form-control", placeholder: "Team Name" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label "Pendiri/Ketua (Leader)", class: "col-sm-2 control-label" %>
		<div class="col-sm-2">
			<%= f.text_field :leader, class: "form-control", placeholder: "Ketua / Leader" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label "Tanggal Berdiri", class: "col-sm-2 control-label" %>
		<% if params[:action] == "edit" %>
			<div class="col-sm-2">
				<%= select_tag "dd", options_for_select((1..31).map {|d| [d, d]}, @birthday.strftime('%-d')), class: "form-control", id: "hari" %>
			</div>
			<div class="col-sm-3">
				<%= select_tag "mm", options_for_select((1..12).map {|m| [Date::MONTHNAMES[m], m]}, @birthday.strftime('%-m')), class: "form-control", id: "bulan" %>
			</div>
			<div class="col-sm-2">
				<%= select_tag "yyyy", options_for_select((1900..2016).map {|y| [y, y]}, @birthday.strftime('%Y')), class: "form-control", id: "tahun" %>
			</div>
		<% else %>
			<div class="col-sm-2">
				<%= select_tag "dd", options_for_select((1..31).map {|d| [d, d]}), class: "form-control", id: "hari" %>
			</div>
			<div class="col-sm-3">
				<%= select_tag "mm", options_for_select((1..12).map {|m| [Date::MONTHNAMES[m], m]}), class: "form-control", id: "bulan" %>
			</div>
			<div class="col-sm-2">
				<%= select_tag "yyyy", options_for_select((1900..2016).map {|y| [y, y]}), class: "form-control", id: "tahun" %>
			</div>
		<% end %>
	</div>

	<div class="form-group">
		<%= f.label :address, class: "col-sm-2 control-label" %>
		<div class="col-sm-6">
			<%= f.text_area :address, class: "form-control", placeholder: "Address" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :city, class: "col-sm-2 control-label" %>
		<div class="col-sm-3">
			<%= f.text_field :city, class: "form-control", placeholder: "City" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :website, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :website, class: "form-control", placeholder: "Website URL" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :email, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :email, class: "form-control", placeholder: "Email Address" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :phone, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :phone, class: "form-control", placeholder: "Phone Number" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :image, class: "col-sm-2 control-label" %>
		<div class="col-sm-5">
			<%= f.file_field :image, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-8">
		  <%= f.submit "Submit", class: "btn btn-default" %>
		</div>
	</div>
<% end %>